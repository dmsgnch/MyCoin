<Page x:Class="MyCoin.Views.CurrencyInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MyCoin.Views"
      mc:Ignorable="d"
      Title="CurrencyInfoPage" Height="680" Width="1200">
   <DockPanel>
        <DockPanel DockPanel.Dock="Top" Style="{DynamicResource NavBarStyle}">
            <Button DockPanel.Dock="Left" Command="{Binding UpdateCurrenciesCommand}" Content="Update"/>
            <TextBlock DockPanel.Dock="Left" Style="{DynamicResource FilterTextBox}" Text="Search: "></TextBlock>
            <TextBox DockPanel.Dock="Left" Style="{DynamicResource FilterTextBox}" Width="200" Text="{Binding StringFilter, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Button DockPanel.Dock="Right" Command="{Binding ChangeThemeCommand}" Content="Change theme"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <TextBlock>Welcome to currency info page</TextBlock>
        </DockPanel>
    </DockPanel>
</Page>
